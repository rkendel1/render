{
  "name": "@json-render/wc-builder",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "description": "Build tool that compiles json-render catalogs into distributable Web Component bundles",
  "keywords": [
    "json-render",
    "web-components",
    "builder",
    "compiler",
    "custom-elements"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vercel-labs/json-render.git",
    "directory": "packages/wc-builder"
  },
  "homepage": "https://github.com/vercel-labs/json-render#readme",
  "bugs": {
    "url": "https://github.com/vercel-labs/json-render/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@json-render/contracts": "workspace:*",
    "@json-render/core": "workspace:*",
    "@json-render/wc-renderer": "workspace:*"
  },
  "devDependencies": {
    "@internal/typescript-config": "workspace:*",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}
